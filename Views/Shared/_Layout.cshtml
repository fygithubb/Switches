<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Switches</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="@Url.Content("~/favicon.png")" />


    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Google Fonts for rich geek+royal look -->
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@700&family=Quicksand:wght@400;600&display=swap" rel="stylesheet">

    <!-- Site Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Switches.styles.css" asp-append-version="true" />

    <style>
        .brand-title {
            font-family: 'Cinzel', serif;
            font-weight: 700;
            font-size: 2rem;
            color: #2c2c2c;
            margin: 0 auto;
            text-align: center;
            letter-spacing: 1px;
        }

        .footer-text {
            font-family: 'Quicksand', sans-serif;
            font-weight: 500;
            text-align: center;
            font-size: 0.95rem;
        }

        .navbar {
            justify-content: center;
        }

        .footer {
            padding: 1rem 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <span class="brand-title">⚡ Switches</span>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container footer-text">
            &copy; 2025 - Switches - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
